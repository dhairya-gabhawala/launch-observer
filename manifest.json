{
  "manifest_version": 3,
  "name": "Launch Observer",
  "version": "0.1.3",
  "description": "Observe and inspect analytics network calls with decoded payloads.",
  "action": {
    "default_title": "Launch Observer"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "scripting",
    "tabs",
    "webRequest",
    "webNavigation"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://cdn.simpleicons.org"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
